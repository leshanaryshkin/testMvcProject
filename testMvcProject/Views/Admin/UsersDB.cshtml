
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ru">
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" type="text/css" href="~/css/Admin/UsersDB.css" />
    <title>Страница со всеми заявками для админа</title>
</head>
<body>


    <div class='header2'>
        <div class='container2'>
            <div class='header-line2'>

                <div class='btn_user1'>
                    <a class="button_user1" href="/User/AboutUs">О нас</a>
                </div>

                <div class='btn_user2'>
                    <a class='button_user2' href="/User/AdditionalServices">Услуги</a>
                </div>

                <div class='btn_user3'>
                    <a class='button_user3' href="/User/Orders">Корзина</a>
                </div>

                <div class='btn_user4'>
                    <a class='button_user4' href="/User/Authorization">Вход</a>
                </div>


            </div>
        </div>
    </div>

    <div class='line'>
    </div>




    <div class='header1'>
        <div class='container1'>
            <div class='header-line1'>

                <div class='btn1'>
                    <a class='button1' href="/Admin/Requests">Заявки</a>
                </div>

                <div class='btn2'>
                    <a class='button2' href="/Admin/OrdersInProgress">Активные заказы</a>
                </div>

                <div class='btn3'>
                    <a class='button3' href="/Admin/ResourcesOnStock">Склад</a>
                </div>

                <div class='btn4'>
                    <a class='button4' href="/Admin/UsersDB">Заказчики</a>
                </div>


            </div>
        </div>
    </div>



    <div class='specifications'>

        <div class='container3'>
            <div class='specifications-holder'>
                <div class='ID'>

                    <div class='ID-title'>
                        ID
                    </div>

                </div>

                <div class='ID'>

                    <div class='ID-title'>
                        Время
                    </div>

                </div>

                <div class='ID'>

                    <div class='ID-title'>
                        Номер телефона
                    </div>

                </div>

                <div class='ID'>

                    <div class='ID-title'>
                        Сумма
                    </div>

                </div>


            </div>
        </div>


    </div>





<table>
    <tr>
        <th>Зарегистрированные пользователи</th>
        <th>Имя</th>
        <th>Номер телефона</th>
        <th>Адрес</th>
    </tr>

    @{
        foreach (var person in Model.getAllPersons())
        {
            <tr>
                <td>ID:@person.PersonID</td>
                <td>@person.Name</td>
                <td>@person.Telephone</td>
                <td>@person.Adress</td>
                <td>
                    <form action="/Admin/DeleteUser" method="post">
                    <input name="id" value="@person.PersonID" type="hidden">
                <button>delete</button>
                    </form>
                    </td>
            </tr>
        }
    }
</table>



<style>
table {
    font-family: "Lucida Sans Unicode", "Lucida Grande", Sans-Serif, serif;
    font-size: 14px;
    border-collapse: collapse;
    text-align: center;
    width: 100%;
}
th, td:first-child {
    background: #AFCDE7;
    color: white;
    padding: 10px 20px;
}
th, td {
    border-style: solid;
    border-width: 0 1px 1px 0;
    border-color: white;
}
td {
    background: #D8E6F3;
}
th:first-child, td:first-child {
    text-align: center;
}
</style>


</body>

</html>