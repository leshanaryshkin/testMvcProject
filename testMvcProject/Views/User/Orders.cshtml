@using Microsoft.AspNetCore.Http


<!DOCTYPE html>
<html>

<head>

    <meta charset="utf-8">

    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="~/css/User/Orders.css" />

    <title>UnionWindows</title>
</head>

<header class="header">

    <div class="header__inner">
        <div class="nav">
            <a class="nav__link" href="~/User/AboutUs">О нас</a>
            <a class="nav__link" href="~/User/Calculator">Калькулятор</a>
            <a class="nav__link" href="~/User/Orders">Корзина</a>
            <a class="nav__link" href="~/User/Authorization">Вход</a>

        </div>
    </div>

</header>

<body>

    <section class="section-cart">
        <header class="section-cart__header">
            <div class="container">
                <h1 class="title-1">Корзина товаров</h1>
            </div>
        </header>
        <div class="section-cart__body">
            <div class="container">

                <section class="cart">
                    <header class="cart-header">
                        <div class="cart-header__title">размер</div>
                        <div class="cart-header__count">профиль</div>
                        <div class="cart-header__cost">фурнитура</div>
                        <div class="cart-header__cost">кол-во камер</div>
                        <div class="cart-header__cost">кол-во створок</div>
                        <div class="cart-header__cost">услуги</div>
                        <div class="cart-header__cost">кол-во</div>
                        <div class="cart-header__cost">стоимость</div>
                    </header>

                    <section class="product">
                        <div class="product__size">190*90</div>
                        <div class="product__profile">иииии</div>
                        <div class="product__furniture">хз</div>
                        <div class="product__numOFcams">3</div>
                        <div class="product__numOFdoors">2</div>
                        <div class="product__install">нужен</div>
                        <div class="product__count">
                            <div class="count">
                                <div class="count__box">
                                    <input type="number" class="count__input" min="1" max="100" value="1">
                                </div>
                                <div class="count__controls">
                                    <button type="button" class="count__up">
                                        <img width="20" height="20" src="~/img/Orders/стрелкавверх.jpg" alt="Больше">
                                    </button>
                                    <button type="button" class="count__down">
                                        <img width="20" height="20" src="~/img/Orders/стрелкавниз.jpg" alt="Меньше">
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="product__price">20 000 руб.</div>
                        <div class="product__controls">
                            <button type="button">
                                <img width="35" height="35" src="~/img/Orders/кнопка_удалить.png" alt="Удалить">
                            </button>
                        </div>
                    </section>

                    <section class="product">
                        <div class="product__size">200*100</div>
                        <div class="product__profile">аоаа</div>
                        <div class="product__furniture">фззф</div>
                        <div class="product__numOFcams">10</div>
                        <div class="product__numOFdoors">3</div>
                        <div class="product__install">не нужен</div>
                        <div class="product__count">
                            <div class="count">
                                <div class="count__box">
                                    <input type="number" class="count__input" min="1" max="100" value="1">
                                </div>
                                <div class="count__controls">
                                    <button type="button" class="count__up">
                                        <img width="20" height="20" src="~/img/Orders/стрелкавверх.jpg" alt="Больше">
                                    </button>
                                    <button type="button" class="count__down">
                                        <img width="20" height="20" src="~/img/Orders/стрелкавниз.jpg" alt="Меньше">
                                    </button>
                                </div>
                            </div>
                        </div>
                        <div class="product__price">9 000 руб.</div>
                        <div class="product__controls">
                            <button type="button">
                                <img width="35" height="35" src="~/img/Orders/кнопка_удалить.png" alt="Удалить">
                            </button>
                        </div>
                    </section>


                    <footer class="cart-footer">
                        <div class="cart-footer__price">Итого: 29 000 руб.</div>
                        <div class="cart-footer__order">
                            <h2 class="title-2">Оформить заказ</h2>
                        </div>
                    </footer>
                </section>

            </div>
        </div>
    </section>



</body>




</html>
